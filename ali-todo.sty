\ProvidesPackage{ali-todo}

\RequirePackage[dvipsnames]{xcolor}

\RequirePackage[final]{todonotes}

% margin
\setuptodonotes{
	tickmarkheight=3pt,
	size=small,
	linecolor=red,
	backgroundcolor=red!10,
	bordercolor=red,
	textcolor=red,
	prepend,
	caption={\textbf{TODO}}
}

\newcommand{\warn}[1]{\PackageWarning{ali-todo}{Unfinished TODO item: #1}}

\newcommand{\note}[1]{\todo[noprepend,textcolor=black,linecolor=ForestGreen,bordercolor=ForestGreen,backgroundcolor=ForestGreen!5]{#1}}

% inline
\newcommand{\inlinetodo}[1]{{\color{red}\textbf{TODO:} \textit{#1}}}
\newcommand{\inlinenote}[1]{{\color{ForestGreen}\textbf{NOTE:} \textit{#1}}}

\newcommand{\undertodo}[1]{{\color{red}\underline{#1}}}
\newcommand{\XX}{{\warn{XX} \color{red} \bfseries XX}}
